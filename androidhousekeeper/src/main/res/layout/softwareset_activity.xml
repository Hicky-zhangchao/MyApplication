<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="#013c57">


        <ImageView
            android:id="@+id/iv_fanhui"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingLeft="10dp"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/btn_homeasup_default1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设  置"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_centerInParent="true"
            android:textColor="#fff"/>

    </RelativeLayout>



    <!--  主题布局  -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <!-- 第一行布局  -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:orientation="horizontal"
                android:background="@drawable/bott_linerstyle">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/tv_qidong"
                        android:text="开机启动"
                        android:textColor="#000"
                        android:textSize="16dp"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:padding="10dp"
                    android:layout_weight="2">


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:padding="10dp"
                    android:gravity="right"
                    android:layout_weight="1">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cb_01"
                        android:focusableInTouchMode="true"
                        android:button="@null"
                        android:layout_gravity="right"
                        android:background="@drawable/my_checkbox"/>

                </LinearLayout>

            </LinearLayout>


            <!-- 第二行布局  -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:orientation="horizontal"
                android:background="@drawable/bott_linerstyle">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/tv_tongzhi"
                        android:text="通知图标"
                        android:textColor="#000"
                        android:textSize="16dp"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:padding="10dp"
                    android:layout_weight="2">


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:padding="10dp"
                    android:gravity="right"
                    android:layout_weight="1">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:id="@+id/cb_02"
                        android:layout_gravity="right"
                        android:background="@drawable/my_checkbox"/>

                </LinearLayout>

            </LinearLayout>


            <!-- 第三行布局  -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:orientation="horizontal"
                android:background="@drawable/bott_linerstyle">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/tv_info"
                        android:text="消息推送"
                        android:textColor="#000"
                        android:textSize="16dp"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:padding="10dp"
                    android:layout_weight="2">


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:padding="10dp"
                    android:gravity="right"
                    android:layout_weight="1">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:id="@+id/cb_03"
                        android:layout_gravity="right"
                        android:background="@drawable/my_checkbox"/>

                </LinearLayout>

            </LinearLayout>


            <!-- 第四行布局  -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:orientation="horizontal"
                android:background="@drawable/bott_linerstyle">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="帮助说明"
                        android:textColor="#000"
                        android:textSize="16dp"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:padding="10dp"
                    android:layout_weight="2">


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:padding="10dp"
                    android:gravity="right"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="right"
                        android:src="@drawable/ic_arrows_right"/>

                </LinearLayout>

            </LinearLayout>


            <!-- 第五行布局  -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:orientation="horizontal"
                android:background="@drawable/bott_linerstyle">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="意见反馈"
                        android:textColor="#000"
                        android:textSize="16dp"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:padding="10dp"
                    android:layout_weight="2">


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:padding="10dp"
                    android:gravity="right"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="right"
                        android:src="@drawable/ic_arrows_right"/>

                </LinearLayout>

            </LinearLayout>


            <!-- 第六行布局  -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:orientation="horizontal"
                android:background="@drawable/bott_linerstyle">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="好友分享"
                        android:textColor="#000"
                        android:textSize="16dp"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:padding="10dp"
                    android:layout_weight="2">


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:padding="10dp"
                    android:gravity="right"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="right"
                        android:src="@drawable/ic_arrows_right"/>

                </LinearLayout>

            </LinearLayout>


            <!-- 第七行布局  -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:orientation="horizontal"
                android:background="@drawable/bott_linerstyle">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="版本更新"
                        android:textColor="#000"
                        android:textSize="16dp"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:padding="10dp"
                    android:layout_weight="2">


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:padding="10dp"
                    android:gravity="right"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="right"
                        android:src="@drawable/ic_arrows_right"/>

                </LinearLayout>

            </LinearLayout>


            <!-- 第八行布局  -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:orientation="horizontal"
                android:background="@drawable/bott_linerstyle">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="关于我们"
                        android:textColor="#000"
                        android:textSize="16dp"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:padding="10dp"
                    android:layout_weight="2">


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:padding="10dp"
                    android:gravity="right"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="right"
                        android:src="@drawable/ic_arrows_right"/>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>
</LinearLayout>